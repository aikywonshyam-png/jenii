<body>

    <div class="card" id="main-card">
        <h1>Hey <span class="name">Jeniva</span> üíï</h1>
        <p>From my heart to your screen...<br>Will you be my Valentine? üåπ</p>
        <button id="yes" onclick="sayYes()">Yes üíñ</button>
        <button id="no" onmouseover="moveNo()">No üòÖ</button>
    </div>

    <div id="success-screen" style="display:none; z-index: 10;">
        <h1 style="font-size: 3.5rem;">YAYYYY! üíñüéâ</h1>
        <p style="font-size: 1.5rem;">Jeniva, you've made me the happiest person alive! ‚ú®</p>
        <button id="secret-btn" onclick="showSecret()">Click for a secret note üíå</button>
        <p id="secret-text">
            "Every moment with you feels like a dream I never want to wake up from. 
            I'm so lucky to have you in my life. I love you! ‚ù§Ô∏è"
        </p>
    </div>

    <script>
        function createHeart() {
            const heart = document.createElement('div');
            heart.classList.add('heart');
            heart.innerHTML = '‚ù§Ô∏è';
            heart.style.left = Math.random() * 100 + "vw";
            heart.style.animationDuration = Math.random() * 3 + 3 + "s";
            heart.style.fontSize = Math.random() * 20 + 10 + "px";
            document.body.appendChild(heart);
            setTimeout(() => { heart.remove(); }, 6000);
        }

        setInterval(createHeart, 300);

        function sayYes() {
            document.getElementById('main-card').style.display = 'none';
            const success = document.getElementById('success-screen');
            success.style.display = 'block';
            document.getElementById('secret-btn').style.display = 'inline-block';
            
            // Celebration hearts
            for(let i=0; i<30; i++) { setTimeout(createHeart, i * 100); }
            setInterval(createHeart, 100);
        }

        function showSecret() {
            document.getElementById('secret-btn').style.display = 'none';
            document.getElementById('secret-text').style.display = 'block';
        }

        function moveNo() {
            const button = document.getElementById("no");
            const x = Math.random() * (window.innerWidth - button.offsetWidth - 50);
            const y = Math.random() * (window.innerHeight - button.offsetHeight - 50);
            button.style.left = `${x}px`;
            button.style.top = `${y}px`;
        }
    </script>
